<h1>Manatee Brewery</h1>

<h2>Drink Me!</h2>

<ul>
    {{#each brews}}
    {{#unless sleepy}}
    {{> cats/cat-block sleep=true}}
    {{/unless}}
    {{/each}}
</ul>

<h2>Drinks you've dRuNk</h2>

<ul>
    {{#each brews}}
    {{#if sleepy}}
    {{> cats/cat-block sleep=false}}
    {{/if}}
    {{/each}}
</ul>

<h2>Request a beer</h2>
<form class="create-form">

    <div class="form-group">
        <label for="ca">Beer Name:</label>
        <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
        <label for="sleepy">Sleepy?</label><br>
        <input type="radio" name="sleepy" value="1" checked> Sleepy!<br>
        <input type="radio" name="sleepy" value="0"> Awake
    </div>

    <button type="submit">Pour my beer, barkeep!</button>
</form>