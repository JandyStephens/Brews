<h1>Manatee Brewery</h1>
<hr>
<h2>Drink Me!</h2>

<ul>
    {{#each brew_data}}
    {{#unless quaffed}}
    {{!-- {{> cats/cat-block sleep=true}} --}}
    {{> brews/brew-block quaffed=true}}
    {{!-- <li>{{beer_name}}</li> --}}
    {{/unless}}
    {{/each}}
</ul>
<hr>

<h2>Drinks you've dRuNk</h2>

<ul>
    {{#each brew_data}}
    {{#if quaffed}}
    {{> brews/brew-block quaffed=false}}
    {{/if}}
    {{/each}}
</ul>
<hr>

<h2>Request a beer</h2>
<form class="create-form">

    <div class="form-group">
        <label for="beername">Beer Name:</label>
        <input type="text" id="beername" name="name">
        <button type="submit">Pour my beer, barkeep!</button>
    </div>
</form>